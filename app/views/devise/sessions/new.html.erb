<div class="container">
  <div id="loginbox" class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <%= render 'layouts/messages' %>
    <%= devise_error_messages! %>
    <div class="panel panel-info">
      <div id="login-rails-admin" class="panel-heading">
        <div class="panel-title text-center">LOGIN</div>
      </div>
      <div class="panel-body" >
        <div class="alert alert-danger col-sm-12 hide"></div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <%= f.email_field :email, placeholder: 'E-mail', class: "form-control" %>
            </div>

            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <%= f.password_field :password, placeholder: 'Senha', autocomplete: "off", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="input-group pull-left">
                <%= f.check_box :remember_me %>&nbsp;<b>Lembrar Senha</b>
              </div>
            <% end -%>

            <div class="form-group btn-submit">
              <%= f.submit "Entrar", class: "btn btn-success pull-right" %>
            </div>

            <div class="form-group" style="clear:both">
              <div class="line-bottom">
                <%= render "devise/shared/links" %>
              </div>
            </div>

          <% end %>
      </div>
    </div>
  </div>
</div>
